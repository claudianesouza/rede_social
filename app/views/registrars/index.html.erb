    <div class="container">
        <div class="card card-container">
            <!-- <img class="profile-img-card" src="//lh3.googleusercontent.com/-6V8xOA6M7BA/AAAAAAAAAAI/AAAAAAAAAAA/rzlHcD0KYwo/photo.jpg?sz=120" alt="" /> -->
            <img id="profile-img" class="profile-img-card" src="//ssl.gstatic.com/accounts/ui/avatar_2x.png" />
            <p id="profile-name" class="profile-name-card"></p>
            <form class="form-signin">
                <span id="reauth-email" class="reauth-email"></span>
                <input type="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                <input type="senha" id="inputPassword" class="form-control" placeholder="Senha" required>
                <div id="remember" class="checkbox">
                    <label>
                        <input type="checkbox" value="Lembrar-me"> Lembrar-me
                    </label>
                </div>
                <button class="btn btn-lg btn-primary btn-block btn-signin" type="submit">Entrar</button>
                  <%= link_to new_registrar_path, class: 'btn btn-lg btn-primary btn-block btn-block btn-create' do %>
                   <span class="glyphicon glyphicon-plus"></span>
                      Criar uma conta
                           <% end %>
                          
                            </form><!-- /form -->
            <a href="#" class="forgot-password">
                Esqueceu a conta?
            </a>
        </div><!-- /card-container -->
    </div><!-- /container -->



